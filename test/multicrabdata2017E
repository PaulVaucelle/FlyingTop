        # This is the base config:
        #--------------------------------------------------------
        from CRABClient.UserUtilities import config
        config = config()

        config.General.requestName = None
        config.General.workArea = "Crab_09_04_24/2017/dataE"

        config.JobType.pluginName = 'Analysis'
        config.JobType.psetName = 'flyingtop_data_2017.py'
        config.JobType.inputFiles = ['BDT_TRK_CTAU10cm_vs_TT.xml','BDT_EVT_ALLSIGvsALLBKG.xml','BDT_EVT_ALLSIGvsDYM50.xml','BDT_EVT_ALLSIGvsTTTo2L2Nu.xml','BDT_VTX_ALLSTEPS_ALLSignal.xml','BDT_VTX_STEPS12_ALLSignal.xml','Pileup_MC2017UL_bin100.root','MyDataPileupHistogram2017.root','RoccoR2017UL.txt']

