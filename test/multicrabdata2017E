            #'/MuonEG/Run2018B-UL2018_MiniAODv2-v1/MINIAOD',
            #'/MuonEG/Run2018C-UL2018_MiniAODv2-v1/MINIAOD',
            #'/MuonEG/Run2018D-UL2018_MiniAODv2-v1/MINIAOD'
           
